<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Email</th>
      <th>Ip address</th>
      <th>Ftp user name</th>
      <th>Ftp password</th>
      <th>Ftp inbound path</th>
      <th>Ftp outbount path</th>
      <th>Load time</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.city %></td>
        <td><%= client.postal_code %></td>
        <td><%= client.email %></td>
        <td><%= client.ip_address %></td>
        <td><%= client.ftp_user_name %></td>
        <td><%= client.ftp_password %></td>
        <td><%= client.ftp_inbound_path %></td>
        <td><%= client.ftp_outbount_path %></td>
        <td><%= client.load_time %></td>
        <td><%= client.company_id %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

